<html>
<head>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
  <link href="/styles.css" rel="stylesheet" type="text/css" media="all">
  <title>Sweet Tamarind Hair Salon</title>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <img src="/hair.jpg" class="img-responsive" id="backg">
        </div>
    </div>
    <div class="row">
      <div class="col-md-12" id="transparent">
        <h1>{{ stylist.getName }}</h1>

        <form action="/stylists/{{ stylist.getId }}" method="post">
          <input name="_method" type="hidden" value="patch">

          <label for="name">Rename {{ stylist.getName }}:</label>
          <input id="name" name="name" type="text" required>

          <button type="submit" class="btn btn-success">Update</button>
        </form>

        <form action="/stylists/{{ stylist.getId }}" method="post">
          <input name="_method" type="hidden" value="delete">

          <button type="submit" class="btn btn-warning">Delete this Stylist</button>
        </form>

        <p><a href='/'>Home</a></p>
      </div>
    </div>
  </div>
</body>
</html>
