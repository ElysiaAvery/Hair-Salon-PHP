<html>
<head>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
  <link href="/styles.css" rel="stylesheet" type="text/css" media="all">
  <title>Sweet Tamarind Hair Salon</title>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <img src="/hair.jpg" class="img-responsive" id="backg">
        </div>
    </div>
    <div class="row">
      <div class="col-md-12" id="transparent">
        <h1>{{ stylist.getName }}</h1>

        {% if clients is not empty %}
          <p>Here are {{ stylist.getName }}'s clients:</p>
          <ul>
            {% for client in clients %}
              <li><a href="/clients/{{ client.getId }}">{{ client.getName }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}

        <h4>Add a Client</h4>

        <form action='/clients' method='post'>
          <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId() }}">
          <label for='name'>Client's Name:</label>
          <input id='name' name='name' type='text' required>

          <button type='submit' class="btn btn-success">Add Client</button>
        </form>

        <p><a href="/stylists/{{ stylist.getId }}/edit">Edit this Stylist</a></p>

        <p><a href='/'>Home</a></p>
      </div>
    </div>
  </div>
</body>
</html>
